<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- MAIN MENU -->
        <menuitem name="Volunteers"
            id="volunteers_main_menu"
            sequence="1"
            web_icon="volunteers,static/description/icon.png"/>
        
        
        <record model="ir.actions.act_window" id="volunteer_list_action">
            <field name="name">Volunteers</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first volunteer
                </p>
            </field>
        </record>
        
        <!-- HEADER: Volunteers -->
        <menuitem name="Odoo Volunteers"
                  id="menu_volunteers"
                  sequence="2"
                  parent="volunteers_main_menu"/>
        
        <menuitem id="menu_volunteers_volunteer" name="Volunteers" parent="menu_volunteers" sequence="3"
                  action="volunteer_list_action"/>
        
        <!-- HEADER: Tasks -->
        <record model="ir.actions.act_window" id="task_list_action">
            <field name="name">Tasks</field>
            <field name="res_model">volunteers.task</field>
            <field name="view_mode">tree,form,gantt</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first task
                </p>
            </field>
        </record>

        <menuitem name="Odoo tasks"
                  id="menu_task"
                  sequence="2"
                  parent="volunteers_main_menu"/>
        
        <menuitem id="menu_volunteers_task" name="Tasks" parent="menu_task" sequence="3"
                  action="task_list_action"/>
        
        <!-- HEADER: Cars -->
        <record model="ir.actions.act_window" id="car_list_action">
            <field name="name">Cars</field>
            <field name="res_model">volunteers.car</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first car
                </p>
            </field>
        </record>

        <menuitem name="Odoo cars"
                  id="menu_car"
                  sequence="2"
                  parent="volunteers_main_menu"/>
        <menuitem id="menu_volunteers_car" name="Cars" parent="menu_car" sequence="3"
                    action="car_list_action"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="task_view_form">
            <field name="name">volunteers.task.form</field>
            <field name="model">volunteers.task</field>
            <field name="arch" type="xml">
                <form string="Task Form">
                    <sheet>
                        <group>
                            <group>
                                <h1>Start Time <field name="startTime"/></h1>
                            </group>
                            <group>
                                <h1>Stop Time <field name="stopTime"/></h1>
                            </group>
                             <group>
                                <h2>Leader: <field name="leader_id"/></h2>
                            </group>
                            <group>
                                <h2>State: <field name="state"/></h2>
                            </group>
                        </group>
            
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="type"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Volunteers">
                                <field name="volunteer_ids"/>
                            </page>
                            <page string="Approval Requests">
                                <field name="approval_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="task_view_list">
            <field name="name">volunteers.task.list</field>
            <field name="model">volunteers.task</field>
            <field name="arch" type="xml">
                <tree string="Task List">
                    <field name="name"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="task_view_search">
            <field name="name">volunteers.task.search</field>
            <field name="model">volunteers.task</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record> 

        <record model="ir.ui.view" id="task_view_gantt">
            <field name="name">volunteers.task.gantt</field>
            <field name="model">volunteers.task</field>
            <field name="arch" type="xml">
                <gantt string="Task Gantt"
                    date_start="startTime"
                    date_stop="stopTime"
                    default_group_by="leader_id">
                </gantt>
            </field>
        </record>

        <!-- Print: Task report -->
        <record id="action_report_session" model="ir.actions.report">
            <field name="name">Task report</field>
            <field name="model">volunteers.task</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">odoo_volunteers.report_task_document</field>
            <field name="report_file">odoo_volunteers.report_task</field>
            <field name="print_report_name">Task Report</field>
            <field name="binding_model_id" ref="model_volunteers_task"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>